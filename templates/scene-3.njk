<a-timeline id="timeline1">
  <a-timeline-animation select="#solo" name="move1"></a-timeline-animation>
  <a-timeline-animation select="#solo" name="move2"></a-timeline-animation>
  <a-timeline-animation select="#solo" name="move3"></a-timeline-animation>
  <a-timeline-animation select="#solo" name="move4"></a-timeline-animation>
</a-timeline>

<a-entity animation-timeline__1="timeline: #timeline1; loop: true;">
  <a-entity
  id="solo"
  audio-visualiser
  position="-1 -0.25 -1"
  resonance-source="0"
  animation__move1="property: position; dur: 5000; from: -1 -0.25 -1; to: 1 -0.25 -1; easing: linear; autoplay: false"
  animation__move2="property: position; dur: 5000; from: 1 -0.25 -1; to: 1 -0.25 1; easing: linear; autoplay: false"
  animation__move3="property: position; dur: 5000; from: 1 -0.25 1; to: -1 -0.25 1; easing: linear; autoplay: false"
  animation__move4="property: position; dur: 5000; from: -1 -0.25 1; to: -1 -0.25 -1; easing: linear; autoplay: false"
  ></a-entity>
  <a-entity
    id="audio1"
    audio-visualiser
    position="1.5 -0.25 -1.5"
    resonance-source="1"
  ></a-entity>
  <a-entity
    id="audio2"
    audio-visualiser
    position="-1.5 -0.25 -1.5"
    resonance-source="2"
  ></a-entity>
  <a-entity
    id="audio3"
    audio-visualiser
    position="1.5 -0.25 1.5"
    resonance-source="3"
  ></a-entity>
  <a-entity
    id="audio4"
    audio-visualiser
    position="-1.5 -0.25 1.5"
    resonance-source="4"
  ></a-entity>
</a-entity>