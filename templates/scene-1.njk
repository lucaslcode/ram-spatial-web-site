  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move0"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move2"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move4"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move6"></a-timeline-animation>
  </a-timeline-group>
  
  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move1"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move3"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move5"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move7"></a-timeline-animation>
  </a-timeline-group>
  
  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move2"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move4"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move6"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move0"></a-timeline-animation>
  </a-timeline-group>
  
  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move3"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move5"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move7"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move1"></a-timeline-animation>
  </a-timeline-group>
  
  
  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move4"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move6"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move0"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move2"></a-timeline-animation>
  </a-timeline-group>
  
  
  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move5"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move7"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move1"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move3"></a-timeline-animation>
  </a-timeline-group>
  
  
  <a-timeline-group>
    <a-timeline-animation select="#audio1" name="move6"></a-timeline-animation>
    <a-timeline-animation select="#audio2" name="move0"></a-timeline-animation>
    <a-timeline-animation select="#audio3" name="move2"></a-timeline-animation>
    <a-timeline-animation select="#audio4" name="move4"></a-timeline-animation>
